		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>${guava.version}</version>
		</dependency>
		<dependency>
			<groupId>org.klomp.snark</groupId>
			<artifactId>bencode</artifactId>
			<version>${bencode.version}</version>
