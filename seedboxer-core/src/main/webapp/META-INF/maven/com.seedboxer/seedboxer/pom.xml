	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.seedboxer</groupId>
	<artifactId>seedboxer</artifactId>
	<version>2.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>SeedBoxer</name>
	<description>SeedBoxer is a content distribution system based on users content queue</description>
	<url>https://github.com/seedboxer/seedboxer</url>

	<scm>
		<connection>scm:git:git@github.com:seedboxer/seedboxer.git</connection>
		<developerConnection>scm:git:git@github.com:seedboxer/seedboxer.git</developerConnection>
		<url>git@github.com:seedboxer/seedboxer.git</url>
	</scm>

	<licenses>
		<license>
			<name>GNU General Public License (GPL) v3</name>
			<url>http://www.gnu.org/licenses/gpl.txt</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>jdavisonc</id>
			<name>Jorge Davison</name>
			<email>jdavisonc at gmail.com</email>
			<timezone>-3</timezone>
		</developer>
		<developer>
			<id>The-Sultan</id>
			<name>Farid Elias</name>
			<email>farid.elias at gmail.com</email>
			<timezone>-3</timezone>
		</developer>
	</developers>

	<properties>
		<camel.version>2.10.0</camel.version>
		<jersey.version>1.7</jersey.version>
		<javaee-api.version>6.0</javaee-api.version>
		<spring.version>3.1.2.RELEASE</spring.version>
		<jcl-over-slf4j.version>1.6.1</jcl-over-slf4j.version>
		<logback.version>1.0.6</logback.version>
		<c3p0.version>0.9.1.2</c3p0.version>
		<mysql-connector.version>5.1.16</mysql-connector.version>
		<ftp-common.version>0.5</ftp-common.version>
		<freemarker.version>2.3.9</freemarker.version>
		<sshj.version>0.4.0</sshj.version>
		<guava.version>12.0</guava.version>
		<bencode.version>1.0-SNAPSHOT</bencode.version>
		<jaxb.version>2.2.6-b35</jaxb.version>
		<hibernate.version>4.1.5.SP1</hibernate.version>
		<cglib.version>2.2.2</cglib.version>
		<commons.httpclient.version>3.1</commons.httpclient.version>
		<janino.version>2.5.10</janino.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-spring</artifactId>
